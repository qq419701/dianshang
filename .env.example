# ============================
# 数据库配置
# ============================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=dianshang
DB_USER=root
DB_PASSWORD=your_db_password

# ============================
# Flask 应用配置
# ============================
SECRET_KEY=your_flask_secret_key
FLASK_ENV=production
FLASK_PORT=5000

# ============================
# 系统 AES 加密密钥（用于加密存储敏感字段，32字节）
# ============================
SYSTEM_AES_KEY=01234567890123456789012345678901

# ============================
# 京东通用交易平台配置
# ============================
# JD_GENERAL_VENDOR_ID=你的vendorId
# JD_GENERAL_MD5_SECRET=你的MD5签名密钥
# JD_GENERAL_AES_SECRET=你的AES加密密钥（32字节）

# ============================
# 京东游戏点卡平台配置
# ============================
# JD_GAME_CUSTOMER_ID=你的customerId
# JD_GAME_PRIVATE_KEY=你的签名私钥

# ============================
# 阿奇索开放平台配置（可选）
# ============================
# AGISO_HOST=https://open.agiso.com
# AGISO_APP_ID=你的AppId
# AGISO_APP_SECRET=你的AppSecret
# AGISO_ACCESS_TOKEN=你的AccessToken

# ============================
# 邮件通知配置（可选）
# ============================
SMTP_SERVER=smtp.example.com
SMTP_PORT=465
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@example.com
